<ul class="container text-center py-1">
  <% @articles.each do |article| %>
    <li class="article-item mb-4">
      <h3><%= link_to article.title, article_path(article), class: "list-group display-6 text-decoration-none" %></h3>
      <p class="mx-4"><%= article.content %></p>
    </li>
  <% end %>
</ul>
